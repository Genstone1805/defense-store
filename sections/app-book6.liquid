<section
  class="py-20 bg-muted/10 transition-all scroll-trigger animate--slide-in bg-[#0d0d0d] duration-1000 delay-600 opacity-100 translate-y-0"
>
  <div class="mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <p class="text-6xl font-bold text-white text-center mb-8">{{ section.settings.card_title }}</p>
      <p
        class="text-[17px] text-[#afa38e] leading-relaxed text-center mb-12"
      >
        {{ section.settings.card_sub_title }}
      </p>
      <div class="app-book-6-grid gap-8">
        <div
          class="border text-card-foreground shadow-sm bg-[#7b0f23]/10 border-[#7b0f23]/30 rounded-xl"
        >
          <div class="p-8">
            <p class="text-3xl font-bold text-white mb-6">{{ section.settings.left_title }}</p>
            <div class="space-y-3">
              {% for block in section.blocks %}
                {% if block.type == 'left_option' %}
                  <div class="flex items-start space-x-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lucide lucide-circle-check-big size-7 text-[#7b0f23] mt-1 flex-shrink-0"
                    >
                      <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                      <path d="m9 11 3 3L22 4"></path>
                    </svg>
                    <p class="text-[#afa38e]">{{ block.text }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#7b0f23]/10 border-[#7b0f23]/30 rounded-xl"
        >
          <div class="p-8">
            <p class="text-3xl font-bold text-white mb-6">{{ section.settings.right_title }}</p>
            <div class="space-y-3">
              {% for block in section.blocks %}
                {% if block.type == 'right_option' %}
                  <div class="flex items-start space-x-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lucide lucide-circle-check-big size-7 text-[#7b0f23] mt-1 flex-shrink-0"
                    >
                      <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                      <path d="m9 11 3 3L22 4"></path>
                    </svg>
                    <p class="text-[#afa38e]">{{ block.text }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-12">
        <a
          href="{{ section.settings.button_url }}"
          class="inline-flex text-[17px] items-center justify-center gap-2 whitespace-nowrap rounded-md ring-offset-background transition-colors  bg-primary hover:bg-primary/90  text-lg px-8 py-3 font-semibold uppercase tracking-wide text-white"
          style="background-color: rgb(149, 24, 43)"
        >
          {{ section.settings.button_text }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-right ml-2 size-7"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .app-book-6-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-book-6-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Proof Architecture",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "card_title",
      "label": "Title",
      "default": "Future-Proof Platform Architecture"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "Biometric Integration"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Title",
      "default": "Scalable Implementation"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "LEARN MORE ABOUT BIOMETRICS"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Title"
    }
  ],

  "blocks": [
    {
      "type": "left_option",
      "name": "Left Option",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default Right Option"
        }
      ]
    },
    {
      "type": "right_option",
      "name": "Right Option",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default Right Option"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Proof Architecture",
      "category": "3D Scanner cards"
    }
  ]
}
{% endschema %}
