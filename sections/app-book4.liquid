<section
  class="relative py-20 px-6 scroll-fade-in visible font-sans text-left flex items-center justify-center flex-col text-signal-white object-cover"
  style="background-image: url('{{ "site-banner-bg.png" | asset_url }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"
>
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.8)] bg-blend-color-darken"><p></p></div>
  <div class="mx-auto px-4">
    <div class="max-w-[1100px] mx-auto  transition-all scroll-trigger animate--slide-in duration-1000 delay-200">
      <p class="text-5xl font-bold text-white text-center mb-16">{{ section.settings.card_title }}</p>
      <div class="app-book-4-grid">
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-[12px]"
        >
          <div class="p-8">
            <p class="text-4xl font-bold text-white mb-6">{{ section.settings.left_card_title }}</p>
            <div class="space-y-6">
              <div>
                <p class="font-bold text-[#695e49] mb-3">{{ section.settings.top_left_card_title }}</p>
                <div class="space-y-2 text-[#afa38e] text-[15px]">
                  {% for block in section.blocks %}
                    {% if block.type == 'top_left_option' %}
                      <p>• {{ block.settings.text }}</p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              <div>
                <p class="font-bold text-[#695e49] mb-3">{{ section.settings.bottom_left_card_title }}</p>
                <div class="space-y-2 text-[#afa38e] text-[15px]">
                  {% for block in section.blocks %}
                    {% if block.type == 'bottom_left_option' %}
                      <p>• {{ block.settings.text }}</p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-[12px]"
        >
          <div class="p-8">
            <p class="text-4xl font-bold text-white mb-6">{{ section.settings.right_card_title }}</p>
            <div class="space-y-6">
              <div>
                <p class="font-bold text-[#695e49] mb-3">{{ section.settings.top_right_card_title }}</p>
                <div class="space-y-2 text-[#afa38e] text-[15px]">
                  {% for block in section.blocks %}
                    {% if block.type == 'top_right_option' %}
                      <p>• {{ block.settings.text }}</p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              <div>
                <p class="font-bold text-[#695e49] mb-3">{{ section.settings.bottom_right_card_title }}</p>
                <div class="space-y-2 text-[#afa38e] text-[15px]">
                  {% for block in section.blocks %}
                    {% if block.type == 'bottom_right_option' %}
                      <p>• {{ block.settings.text }}</p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-book-4-grid {
    display: grid;
    gap: 48px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-book-4-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

