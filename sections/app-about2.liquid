<section
  class="py-20 bg-[#0d0d0db4] scroll-trigger animate--slide-in transition-all duration-1000 delay-400"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.72) 12%, rgba(0, 0, 0, 0.57) 53%, rgba(0, 0, 0, 0.74) 78%);
  "
>
  <div class="max-w-[1100px] mx-auto px-4">
    <div class="text-center mb-16">
      <p class="text-6xl font-black text-white mb-4 uppercase">OUR OPERATING PRINCIPLES</p>
      <p class="text-[22px] text-[#afa38e] font-semibold">Humans are more important than hardware</p>
    </div>
    <div class="app-about-2-grid">
      <div
        class="rounded-lg border text-card-foreground shadow-sm bg-[#0d0d0d]/50 border-[#afa38e]/20 hover:border-[#afa38e]/40 transition-all duration-300 h-full"
      >
        <div
          class="py-8 px-6 text-center h-full flex flex-col justify-between min-h-[280px]"
        >
          <div>
            <div
              class="size-24 bg-[#7b0f23] rounded-lg mx-auto mb-6 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-shield size-10 text-white"
              >
                <path
                  d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
