                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            </div>
          </div>
          <p class="text-4xl font-bold text-[#afa38e] my-2 uppercase">{{ section.settings.title4 }}</p>
          <p class="text-white leading-relaxed">{{ section.settings.text4 }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-about-2-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-about-2-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .app-about-2-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

