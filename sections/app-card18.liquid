        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#0d0d0d"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two COls",
      "category": "Technology Cards"
    }
  ]
}
{% endschema %}
