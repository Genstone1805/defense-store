            <h3
              class="text-lg font-black text-[#afa38e] mb-4 uppercase min-h-[3rem] flex items-center justify-center"
            >
              {{ section.settings.title4 }}
            </h3>
            <p
              class="text-white text-[14px] leading-relaxed flex-1 flex items-center"
