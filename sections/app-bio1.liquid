<section
  class="py-20 transition-all scroll-trigger animate--slide-in duration-1000 delay-200 opacity-100 translate-y-0"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.76) 2%, rgba(0, 0, 0, 0.70) 53%, rgba(0, 0, 0, 0.79) 98%);
  "
>
  <div class="mx-auto px-4">
    <div class="max-w-[1100px] mx-auto">
      <p
        class="text-6xl font-black text-white text-center mb-16 uppercase"
      >
        {{ section.settings.card_title }}
      </p>
      <div class="app-bio-1-grid">
        <div
          class="border text-card-foreground shadow-sm h-full bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-700 delay-400 opacity-100 translate-y-0"
        >
