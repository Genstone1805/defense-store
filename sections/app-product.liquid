<div class="min-h-screen w-full">
  <div class="bg-background py-4 px-6">
    <div class="max-w-7xl mx-auto">
      <a
        class="inline-flex items-center text-secondary hover:text-primary transition-colors"
        href="/products"
      >
        <svg ...class="lucide lucide-arrow-left w-4 h-4 mr-2">
          ...
        </svg>
        Back to Products
      </a>
    </div>
  </div>

  <section class="py-20 px-6 bg-background scroll-fade-in visible">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <div class="space-y-6">
          <!-- Product Image -->
          <div class="aspect-square bg-muted/30 rounded-lg overflow-hidden border-2 border-[#6C6846]">
            <img
              src="{{ product.featured_image | image_url }}"
              alt="{{ product.title }}"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              width="100%"
              height="100%"
            >
          </div>

          <!-- Product Overview (Optional: use metafields or description) -->
          <div class="space-y-6 bg-muted/20 p-6 rounded-lg border border-[#6C6846]">
            <div>
              <h3 class="heading-tactical text-primary text-xl mb-3">Overview</h3>
              <p class="body-tactical text-signal-white leading-relaxed">
                {{ product.description }}
              </p>
            </div>

            <!-- Example: Custom Feature Block Using Metafields -->
            {% if product.metafields.custom.features != blank %}
              {% assign features = product.metafields.custom.features | split: ';' %}
              <div>
                <h3 class="heading-tactical text-primary text-xl mb-3">Key Features</h3>
                <ul class="space-y-2 text-signal-white">
                  {% for feature in features %}
                    <li class="flex items-start gap-3">
                      <span class="text-secondary mt-1">â€¢</span>
                      <span>{{ feature }}</span>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </div>
        </div>

        <div class="space-y-8">
          <div class="space-y-4">
            <!-- Product Name -->
            <h1 class="heading-tactical text-primary text-4xl md:text-5xl">{{ product.title }}</h1>

            <!-- Product Description -->
            <p class="body-tactical text-signal-white text-lg leading-relaxed">
              {{ product.metafields.custom.summary }}
            </p>

            <!-- Product Tag and Price -->
            <div class="flex items-center justify-between pt-2">
              <div class="inline-flex items-center rounded-full ...">
                {{ product.tags[0] }}
              </div>
              <div class="text-right">
                <span class="text-primary text-2xl font-bold">
                  {{ product.price | money }}
                </span>
              </div>
            </div>
          </div>

          <!-- Variant selectors (if available) -->
          <div class="space-y-6">
            {% if product.options.size > 0 %}
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% for option in product.options_with_values %}
                  <div class="space-y-2">
                    <label class="text-signal-white text-sm font-medium">{{ option.name }}</label>
                    <select class="w-full bg-muted/30 border-[#6C6846] text-signal-white px-3 py-2 rounded-md border">
                      {% for value in option.values %}
                        <option>{{ value }}</option>
                      {% endfor %}
                    </select>
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>

          <!-- Product Specifications -->
          <div class="rounded-lg border text-card-foreground shadow-sm bg-muted/30 border-[#6C6846]">
            <div class="p-6">
              <h3 class="heading-tactical text-primary text-xl mb-4">Specifications</h3>
              <ul class="space-y-3">
                {% assign specs = product.metafields.custom.specifications | split: ';' %}
                {% for spec in specs %}
                  <li class="flex items-start gap-3 text-signal-white">
                    <svg ... class="lucide lucide-circle-check-big w-5 h-5 text-secondary mt-0.5 flex-shrink-0">
                      ...
                    </svg>
                    <span>{{ spec }}</span>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>

          <!-- CTA & Cart -->
          <div class="space-y-4">
            <button class="inline-flex items-center justify-center ...">REQUEST CONSULTATION TO SCAN MY TEAM</button>

            <div class="flex items-center space-x-3 py-2">
              <input type="checkbox" id="scan-confirm" class="peer h-4 w-4 ...">
              <label for="scan-confirm" class="text-signal-white text-sm cursor-pointer">
                Confirm 3D Scan On-File
              </label>
            </div>

            <form method="post" action="{{ routes.cart_add_url }}">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button
                type="submit"
                class="inline-flex items-center justify-center ... bg-muted text-muted-foreground w-full py-4 text-base transition-all duration-300"
              >
                ADD TO CART
              </button>
            </form>
          </div>

          <div class="pt-4 border-t border-[#6C6846]">
            <p class="text-secondary text-sm">
              Individual scanning opportunities available at events, or coordinated with team scanning locations. Check
              out our upcoming events, or reach out to the team to coordinate your scan.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "App Product",
  "tag": "section",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "App Product",
      "category": "Custom"
    }
  ]
}
{% endschema %}
