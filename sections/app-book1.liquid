<section
  class="py-20 transition-all duration-1000 delay-200 opacity-100 bg-black translate-y-0"
>
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-2xl text-white leading-relaxed mb-12">
