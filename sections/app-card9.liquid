          "id": "button_url",
          "label": "Button Url"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Icon"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#0d0d0d"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Cols Card No Image",
      "category": "Custom"
    }
  ]
}
{% endschema %}
