<section
  class="py-28 "
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.80) 2%, rgba(0, 0, 0, 0.72) 53%, rgba(0, 0, 0, 0.80) 98%);
  "
>
  <div class="mx-auto px-4  transition-all scroll-trigger animate--slide-in duration-1000 delay-200">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-5xl font-bold text-white mb-8 uppercase">{{ section.settings.title }}</p>
      <p class="text-3xl text-[#afa38e] leading-relaxed mb-10">{{ section.settings.sub_title }}</p>
      <div
        class="bg-combat-black/80 border  rounded-[12px] overflow-hidden"
        style="border-color:{{ section.settings.secondary_color }}"
      >
        <table
          class="w-full border border-collapse text-xl md:text-2xl"
          style="border-color:{{ section.settings.secondary_color }}; color:{{section.settings.primary_color }}"
        >
          <thead>
            <tr class="uppercase" style="background-color:{{section.settings.background_color }}">
              <th
                class="border  px-4 py-3 font-semibold text-center text-white"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Feature
              </th>
              <th
                class="border px-8 py-3 text-white font-semibold"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Aware
              </th>
              <th class="border px-4 py-3 font-semibold" style="border-color:{{section.settings.secondary_color }}">
                Traditional
              </th>
              <th class="border px-8 py-3 font-semibold" style="border-color:{{section.settings.secondary_color }}">
                Foam
              </th>
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'table' %}
                <tr style="background-color:{{ section.settings.background_color }}">
                  <!-- Feature Name -->
                  <td
                    class="border px-4 max-w-48 py-3 text-white text-2xl"
                    style="border-color:{{section.settings.secondary_color}}; padding-top:20px; padding-bottom:20px"
                  >
                    {{ block.settings.featured }}
                  </td>

                  <!-- Aware Column -->
                  <td class="border text-center" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.aware %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <!-- Checkmark -->
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <!-- Cross -->
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>

                  <!-- Traditional Column -->
                  <td class="border text-center" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.traditional %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>

                  <!-- Foam Column -->
                  <td class="border text-center" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.foam %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Table",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Default Title"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "Default Sub Title"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#AFA38E"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "color",
      "id": "tertiary_color",
      "label": "tertiary Color",
      "default": "#695e49"
    }
  ],

  "blocks": [
    {
      "type": "table",
      "name": "table",
      "settings": [
        {
          "type": "text",
          "id": "featured",
          "label": "Featured Text",
          "default": "Enter Featured Text"
        },
        {
          "type": "select",
          "id": "aware",
          "label": "Aware Options",
          "default": "yes",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        },
        {
          "type": "select",
          "id": "traditional",
          "label": "Traditional Options",
          "default": "no",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        },
        {
          "type": "select",
          "id": "foam",
          "label": "Foam Options",
          "default": "no",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Table",
      "category": "Technology Cards"
    }
  ]
}
{% endschema %}
