<section
  class="relative py-20 px-6 scroll-fade-in visible font-sans text-left flex items-center justify-center flex-col text-signal-white object-cover"
  style="background-image: url('{{ "site-banner-bg.png" | asset_url }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"
>
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.8)] bg-blend-color-darken"><p></p></div>
  <div class="mx-auto px-4  transition-all scroll-trigger animate--slide-in duration-1000 delay-200">
    <div class=" mx-auto max-w-[1000px] text-center flex items-center flex-col">
      <h2 class="text-[30px] max-w-[928px] font-black text-signal-white mb-6 uppercase">
        {{ section.settings.card_title }}
      </h2>
      <p class="text-[16px] text-[#afa38e] leading-relaxed mb-8">{{ section.settings.text }}</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "High Noise Protection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "card_title",
      "label": "Title",
      "default": "Hearing Protection That Scales Across Every High-Noise Environment"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "More than 22 million U.S. workers are exposed to hazardous noise each year, yet most universal earplugs fail to seal properly. Aware Defense combines the FDA-cleared eFit 3D Scanner with custom-molded ear protection and optional biometric sensors so organizations can deploy mission-grade safety at enterprise scale."
    }
  ],

  "blocks": [],
  "presets": [
    {
      "name": "High Noise Protection",
      "category": "Use Cases"
    }
  ]
}
{% endschema %}
