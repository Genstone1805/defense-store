{% schema %}
{
  "name": "App Header",
  "tag": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Product Menu"
    },
    {
      "type": "link_list",
      "id": "page_menu",
      "label": "Page Menu"
    },
    {
      "type": "color_scheme",
      "id": "header_color",
      "label": "Header Color"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#0d0d0d"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#AFA38E"
    },
    {
      "type": "color",
      "id": "tertiary_color",
      "label": "Tertiary Color",
      "default": "#7B0F23"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "App Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
