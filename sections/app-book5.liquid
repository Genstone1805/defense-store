<section
  class="relative py-20 px-6 scroll-fade-in visible font-sans text-left flex items-center justify-center flex-col text-signal-white object-cover"
  style="background-image: url('{{ "site-banner-bg.png" | asset_url }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"
>
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.8)] bg-blend-color-darken"><p></p></div>
  <div class="mx-auto px-4  transition-all scroll-trigger animate--slide-in duration-1000 delay-200">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-[36px] font-bold text-signal-white text-center mb-8">{{ section.settings.left_title }}</h2>
      <h3 class="text-[24px] font-bold text-olive-drab text-center mb-8">
        {{ section.settings.left_sub_title }}
      </h3>
      <p
        class="text-[16px] text-[#afa38e] leading-relaxed text-center mb-12"
      >
        {{ section.settings.top_text }}
      </p>
      <div class="app-book-5-grid">
        <div class="bg-scarlet-red/10 rounded-[12px] p-8 border border-scarlet-red/20">
          <h3 class="text-[20px] font-bold text-signal-white mb-6">{{ section.settings.left_title }}</h3>
          <div class="space-y-3">
            {% for block in section.blocks %}
              {% if block.type == 'left_option' %}
                <div class="flex items-start space-x-3">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-circle-check-big size-7 text-[#7b0f23] mt-1 flex-shrink-0"
                  >
                    <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                    <path d="m9 11 3 3L22 4"></path>
                  </svg>
                  <p class="text-[#afa38e] text-[14px]">{{ block.settings.text }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="bg-scarlet-red/10 rounded-[12px] p-8 border border-scarlet-red/20 ">
          <h3 class="text-[20px] font-bold text-signal-white mb-6">{{ section.settings.right_title }}</h3>
          <div class="space-y-3">
            {% for block in section.blocks %}
              {% if block.type == 'right_option' %}
                <div class="flex items-start space-x-3">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-circle-check-big size-7 text-[#7b0f23] mt-1 flex-shrink-0"
                  >
                    <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                    <path d="m9 11 3 3L22 4"></path>
                  </svg>
                  <p class="text-[#afa38e] text-[14px]">{{ block.settings.text }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="text-center mt-12">
        <a
          href="{{ section.settings.button_url }}"
          class="inline-flex bg-[#96192b] items-center justify-center gap-2 whitespace-nowrap rounded-[6px] ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 text-[18px] px-10 py-1 font-semibold uppercase tracking-wide text-white"
        >
          {{- section.settings.button_text }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-right ml-2 h-5 w-5"
          >
            <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .app-book-5-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-book-5-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Military Application",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "card_title",
      "label": "Title",
      "default": "Military and Defense Applications"
    },
    {
      "type": "text",
      "id": "card_sub_title",
      "label": "Sub Title",
      "default": "Mission-Critical Reliability"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Text",
      "default": "The eFit scanner has been validated by Special Operations Forces, Navy aviators, and elite military units across multiple service branches. Field testing has demonstrated superior performance in the most demanding operational environments."
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "Deployment Advantages:"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Title",
      "default": "Operational Validation:"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SEE OTHER USE CASES"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Title"
    }
  ],

  "blocks": [
    {
      "type": "left_option",
      "name": "Left Option",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default Right Option"
        }
      ]
    },
    {
      "type": "right_option",
      "name": "Right Option",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default Right Option"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Military Application",
      "category": "3D Scanner cards"
    }
  ]
}
{% endschema %}
