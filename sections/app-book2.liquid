<section
  class="py-20 bg-muted/10 transition-all bg-[#0d0d0d] duration-1000 delay-300 opacity-100 translate-y-0"
>
  <div class="mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <p class="text-4xl font-bold text-white text-center mb-12">{{ section.settings.card_title }}</p>
      <div class="app-book-2-grid">
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-500 delay-400 opacity-100 translate-y-0"
        >
          <div class="p-6 text-center">
            <div
              class="w-16 h-16 bg-[#7b0f23] rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-shield size-8 text-white flex-shrink-0"
              >
                <path
                  d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
                ></path>
              </svg>
            </div>
            <p class="text-[#afa38e] text-xl leading-relaxed">{{ section.settings.text1 }}</p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-500 delay-500 opacity-100 translate-y-0"
        >
          <div class="p-6 text-center">
            <div
              class="w-16 h-16 bg-[#7b0f23] rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-circle-check-big size-8 text-white flex-shrink-0"
              >
                <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                <path d="m9 11 3 3L22 4"></path>
              </svg>
            </div>
            <p class="text-[#afa38e] text-xl leading-relaxed">
              {{ section.settings.text2 }}
            </p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-500 delay-600 opacity-100 translate-y-0"
        >
          <div class="p-6 text-center">
            <div
              class="w-16 h-16 bg-[#7b0f23] rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-target size-8 text-white flex-shrink-0"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="6"></circle>
                <circle cx="12" cy="12" r="2"></circle>
              </svg>
            </div>
            <p class="text-[#afa38e] text-xl leading-relaxed">
              {{ section.settings.text3 }}
            </p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-500 delay-700 opacity-100 translate-y-0"
        >
          <div class="p-6 text-center">
            <div
              class="w-16 h-16 bg-[#7b0f23] rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-clock size-8 text-white flex-shrink-0"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <p class="text-[#afa38e] text-xl leading-relaxed">
              {{ section.settings.text4 }}
            </p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm bg-[#afa38e]/10 border-[#afa38e]/30 rounded-xl transition-all duration-500 delay-800 opacity-100 translate-y-0"
        >
          <div class="p-6 text-center">
            <div
              class="w-16 h-16 bg-[#7b0f23] rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-zap size-8 text-white flex-shrink-0"
              >
                <path
                  d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"
                ></path>
              </svg>
            </div>
            <p class="text-[#afa38e] text-xl leading-relaxed">
              {{ section.settings.text5 }}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-book-2-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-book-2-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .app-book-2-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

