<section
  class="py-16 px-6 w-full items-center justify-center text-white"
  style="background-color:{{section.settings.background_color }}"
>
  <div
    class="mx-auto app-grid gap-10 items-center max-w-7xl"
  >
    <img
      src="{{ section.settings.right_image | image_url }}"
      alt="banner image"
      class="rounded shadow-xl"
      width="606"
      height="318"
    >
    <div class="w-full">
      <p class="text-6xl mb-4" style="color:{{ section.settings.primary_color }}">{{ section.settings.title }}</p>
      <ul class="space-y-3">
        {% for block in section.blocks %}
          <li class="flex gap-x-3 items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              viewBox="0 0 24 24"
              style="color:{{section.settings.secondary_color }}"
            >
              <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"><path d="m9 11l3 3l8-8"/><path d="M20 12a8 8 0 1 1-5.3-7.533"/></g>
            </svg>
            <span> {{ block.settings.text }} </span>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<style>
  .app-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  }
</style>

{% schema %}
{
  "name": "Image Left Cols Card",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0d0d0d"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#B6AC87"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],

  "blocks": [
    {
      "type": "reason",
      "name": "resson",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Reason 1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Left Cols Card",
      "category": "Custom"
    }
  ]
}
{% endschema %}
