<section
  class="py-32 px-6 w-full items-center justify-center text-white"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.70) 2%, rgba(0, 0, 0, 0.70) 53%, rgba(0, 0, 0, 0.74) 98%);
  "
>
  <div
    class="mx-auto app-grid gap-10 items-center max-w-[1100px]  transition-all scroll-trigger animate--slide-in duration-1000 delay-200"
  >
    <img
      src="{{ section.settings.right_image | image_url }}"
      alt="banner image"
      class="rounded-[4px] shadow-xl"
      width="606"
      height="318"
    >
    <div class="space-y-8">
      <h2 class="text-[36px] font-bold text-olive-drab leading-tight md:text-[36px]">{{ section.settings.title }}</h2>
      <div class="space-y-6">
        {% for block in section.blocks %}
          <div class="flex items-start space-x-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-circle-check-big size-8 text-scarlet mt-1 flex-shrink-0"
              style="color:{{section.settings.secondary_color }}"
            >
              <path d="M21.801 10A10 10 0 1 1 17 3.335"></path><path d="m9 11 3 3L22 4"></path>
            </svg>
            <p class="text-[18px] text-signal-white">{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="mt-8">
        <a href="{{section.settings.button_url }}"
          ><button class="inline-flex text-black items-center justify-center gap-2 whitespace-nowrap rounded-md ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 bg-desert-tan text-combat-black hover:bg-desert-tan/90 text-[18px] px-10 py-1 font-semibold uppercase tracking-wide">
            {{ section.settings.button_text }}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-arrow-right ml-2 h-5 w-5"
            >
              <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
            </svg></button
        ></a>
      </div>
    </div>
  </div>
</section>

<style>
  .app-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  }
</style>

{% schema %}
{
  "name": "Image Left Cols Card",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more about eFIT"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#B6AC87"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],

  "blocks": [
    {
      "type": "reason",
      "name": "resson",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Reason 1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Left Cols Card",
      "category": "Custom"
    }
  ]
}
{% endschema %}
