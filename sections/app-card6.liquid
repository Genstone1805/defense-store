<section
  class="py-32 px-6 w-full scroll-trigger animate--slide-in items-center justify-center text-white"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.70) 2%, rgba(0, 0, 0, 0.70) 53%, rgba(0, 0, 0, 0.74) 98%);
  "
>
  <div
    class="mx-auto app-grid gap-10 items-center max-w-[1100px]"
  >
    <img
      src="{{ section.settings.right_image | image_url }}"
      alt="banner image"
      class="rounded shadow-xl"
      width="606"
      height="318"
    >
    <div class="w-full">
      <p class="text-6xl mb-4" style="color:{{ section.settings.primary_color }}">{{ section.settings.title }}</p>
      <ul class="space-y-6">
        {% for block in section.blocks %}
          <li class="flex gap-x-3 items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              viewBox="0 0 24 24"
              style="color:{{section.settings.secondary_color }}"
            >
              <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"><path d="m9 11l3 3l8-8"/><path d="M20 12a8 8 0 1 1-5.3-7.533"/></g>
            </svg>
            <span> {{ block.settings.text }} </span>
          </li>
        {% endfor %}

        <a
          href="{{section.settings.button_url }}"
          class="gap-2 px-8 py-4 my-6 text-black font-bold whitespace-nowrap rounded-md flex items-center justify-center w-1/2"
          style="background-color:{{ section.settings.primary_color }}"
        >
          {{ section.settings.button_text }}
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h16m0 0l-6-6m6 6l-6 6"/>
          </svg>
        </a>
      </ul>
    </div>
  </div>
</section>

<style>
  .app-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  }
</style>

{% schema %}
{
  "name": "Image Left Cols Card",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more about eFIT"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#B6AC87"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],

  "blocks": [
    {
      "type": "reason",
      "name": "resson",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Reason 1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Left Cols Card",
      "category": "Custom"
    }
  ]
}
{% endschema %}
