<section
  class="text-center scroll-trigger flex items-center justify-center flex-col w-full animate--slide-in relative  text-white object-cover"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: rgba(0, 0, 0, 0.58);
  "
>
  <!-- Section Title -->
  <div class="container mx-auto px-4 py-32">
    <div class="text-center mb-16">
      <h2 class="heading-tactical text-signal-white font-bold text-[36px] md:text-[48px] mb-6">
        {{ section.settings.card_title }}
      </h2>
    </div>
    <div class="transition-all duration-700 delay-300 opacity-100 translate-y-0">
      <div class="card-1-3-grid max-w-6xl mx-auto">
        {% for block in section.blocks %}
          {% if block.type == 'card' %}
            <a class="group p-4 block" href="{{block.settings.link_url}}">
              <div class="w-full h-64 bg-white rounded-[16px] lg:min-h-[200px] min-h-[150px] flex items-center justify-center shadow-2xl border-2 border-[#6C6846] transition-all duration-300 hover:scale-105 hover:shadow-primary/20 overflow-hidden cursor-pointer">
                <div class="relative overflow-hidden w-full  h-full object-cover filter drop-shadow-lg group-hover:drop-shadow-xl transition-all duration-300 rounded-[16px]">
                  <img
                    src="{{ block.settings.image | image_url  }}"
                    alt="{{ block.settings.title }}"
                    class="opacity-100 w-full h-full object-cover filter drop-shadow-lg group-hover:drop-shadow-xl transition-all duration-300 rounded-[16px]"
                    loading="eager"
                    decoding="async"
                    width="100%"
                    height="100%"
                  >
                </div>
              </div>
              <h3 class="text-center mt-4 text-[18px] font-semibold text-signal-white group-hover:text-primary transition-colors duration-300">
                {{ block.settings.text }}
              </h3>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .card-1-3-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .card-1-3-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  }
</style>

{% schema %}
{
  "name": "Image Cols Card",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "card_title",
      "label": "Card Title",
      "default": "Card Title"
    },
    {
      "type": "text",
      "id": "card_sub_title",
      "label": "Card Sub Title",
      "default": "Card Sub Title"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Card Text",
      "default": "Card Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "See More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "fill",
          "label": "Filled"
        },
        {
          "value": "outline",
          "label": "Outline"
        }
      ],
      "default": "outline"
    },
    {
      "type": "color",
