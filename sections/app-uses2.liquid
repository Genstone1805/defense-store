<section
  class="py-20 transition-all duration-1000 delay-300 opacity-100 translate-y-0 bg-[#0d0d0d]"
>
  <div class="mx-auto px-4">
    <div class="max-w-[1100px] mx-auto">
      <div class="space-y-16">
        <div
          class="transition-all duration-700 delay-400 opacity-100 translate-y-0"
        >
          <div
            class="border text-card-foreground shadow-sm bg-[#afa38e]/5 border-[#afa38e]/20 rounded-xl overflow-hidden"
          >
            <div class="p-0">
              <div class="app-uses-2-grid">
                <div class="p-8 lg:p-12">
                  <div class="mb-6">
                    <p
                      class="text-4xl font-black text-white uppercase mb-2"
                    >
                      {{ section.settings.card_title }}
                    </p>
                    <p
                      class="text-[17px] font-semibold text-[#7b0f23] uppercase tracking-wide"
                    >
                      {{ section.settings.sub_title }}
                    </p>
                  </div>
                  <p class="text-white leading-relaxed mb-8">{{ section.settings.text }}</p>
                  <div class="space-y-3 mb-8">
                    {% for block in section.blocks %}
                      {% if block.type == 'text' %}
                        <div class="flex items-start space-x-3">
                          <div
                            class="size-4 bg-[#7b0f23] rounded-full mt-3 flex-shrink-0"
                          >
                            <p></p>
                          </div>
                          <p class="text-[#afa38e] text-2xl leading-relaxed">
                            {{ block.settings.text }}
                          </p>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                  <div class="mb-8">
                    <p
                      class="text-2xl text-[#afa38e]/60 uppercase tracking-wide mb-3"
                    >
                      Featured Products
                    </p>
                    <div class="flex space-x-3">
                      {% for block in section.blocks %}
                        {% if block.type == 'image' %}
                          <div
                            class="size-24 bg-white rounded-lg overflow-hidden"
                          >
                            <img
                              src="{{block.settings.image | image_url}}"
                              width="100%"
                              height="100%"
                              alt="featured product"
                              class="w-full h-full object-cover"
                            >
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                </div>
                <div
                  class="bg-[#0d0d0d]/30 border-l border-[#afa38e]/20 flex items-center justify-center min-h-[300px] lg:min-h-[350px]"
                >
                  {% if section.settings.side_image != blank %}
                    <img
                      src="{{section.settings.side_image | image_url}}"
                      width="1200"
                      height="800"
                      alt="Side Image"
                      class="w-full h-full object-cover"
                    >
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-uses-2-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-uses-2-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Uses",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "card_title",
      "label": "Title",
      "default": "Defense & Federal Government"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "Mission-Critical Applications"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Warfighters rank hearing loss as the #1 service-connected disability. Aware Defense custom molds integrate seamlessly with comms suites from Gentex, Invisio, Axil, and more, delivering full-seal impulse protection without blocking situational audio."
    },
    {
      "type": "text",
      "id": "bottom_title",
      "label": "Buttom Text",
      "default": "Featured Products"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Side Image"
    }
  ],

  "blocks": [
    {
      "type": "option",
      "name": "Option",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default Text"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Uses",
      "category": "Use Cases"
    }
  ]
}
{% endschema %}
