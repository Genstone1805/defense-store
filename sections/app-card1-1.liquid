<section
  class="py-20 px-6 relative scroll-slide-right visible"
  style="background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('{{ "site-bg.png" | asset_url }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"
