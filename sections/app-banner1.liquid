<section
  class="relative scroll-trigger animate--slide-in h-screen text-white bg-[#0d0d0d] banner"
>
  <!-- overlay -->
  <div class="absolute size-full inset-0 from-[#0d0d0d] bg-gradient-to-tr to-[#0d0d0dd3] opacity-60 z-0">
    <div></div>
  </div>
  <!-- Text -->
  <div class="absolute size-full">
    <div class="w-full h-full flex items-center justify-center">
      <div class="max-w-7xl text-center gap-y-4 flex flex-col items-center">
        <div class="-space-y-2 px-4">
          <p class="text-[48px]/20 font-bold uppercase">{{ section.settings.main_header }}</p>
          <p
            class="text-[36px]/20 mt-3 tracking-wide uppercase font-semibold"
            style="color:{{ section.settings.secondary_color }}"
          >
            {{ section.settings.sub_header }}
          </p>
        </div>
        <p
          class="text-[20px]/10 tracking-wide mb-4 px-6"
          style="color:{{ section.settings.primary_color }}"
        >
          {{ section.settings.text1 }}
        </p>
        <p class="text-[20px]/10 tracking-wide mb-8 px-6">{{ section.settings.text2 }}</p>
        <div class="flex gap-8 flex-col md:flex-row ">
          {% for block in section.blocks %}
            {% if block.settings.button_color == 'primary' %}
              <a
                href="{{block.settings.link}}"
                class="border py-2 uppercase px-10 font-medium transition-transform duration-150"
                style="border-color:{{section.settings.primary_color }}"
                onmouseover="this.style.backgroundColor='{{ section.settings.primary_color }}'"
                onmouseout="this.style.backgroundColor=''"
              >
                {{ block.settings.label -}}
              </a>
            {% else %}
              <a
                href="{{block.settings.link}}"
                class="border py-2 uppercase px-10 font-medium transition-transform duration-150"
                style="border-color:{{section.settings.secondary_color }}"
                onmouseover="this.style.backgroundColor='{{ section.settings.secondary_color }}'"
                onmouseout="this.style.backgroundColor=''"
              >
                {{ block.settings.label }}
              </a>
            {% endif %}
          {% endfor %}
          {% comment %} <a href="#" class="border px-4 py-2 rounded"> LEARN HOW OUR TECH WORKS </a> {% endcomment %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .banner {
    background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');
    background-repeat: no-repeat;
    background-position: bottom;

    @media (min-width: 640px) {
      background-size: 130%;
    }
  }
</style>

{% schema %}
{
  "name": "Home Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "main_header",
      "label": "Banner Title",
      "default": "Custom-Fit Hearing Protection"
    },
    {
      "type": "text",
      "id": "sub_header",
      "label": "Sub Banner Title",
      "default": "Mission-Ready Performance"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "First Banner text",
      "default": "If it’s not worn, it doesn’t work. Discover gear that actually gets worn and performs flawlessly."
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Second Banner text",
      "default": "The world's only FDA-cleared, non-contact 3D ear scanner. Trusted by Special Operations, DoD Aviators, Law Enforcement, and Industrial Teams."
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Tertiary Color",
      "default": "#AFA38E"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button text",
          "default": "Click me"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_color",
          "label": "Button color",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
