{% comment %}
  <section
    class="py-20 px-6 relative scroll-fade-in visible"
    style="
            background: rgba(0, 0, 0, 7.24);
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.68) 2%, rgba(0, 0, 0, 0.65) 53%, rgba(0, 0, 0, 0.74) 98%);
    "
  >
    <div class="max-w-7xl mx-auto">
      <div class="text-center max-w-6xl mb-16">
        <h2 class="heading-tactical text-signal-white text-[36px]/14 uppercase font-bold md:text-[48px]/20 mb-6">
          Don't Compromise When the Mission Depends on It
        </h2>
      </div>
      <div class="flex gap-x-8 items-center">
        <div class="w-2/3">
          <div class="bg-combat-black rounded-lg overflow-hidden ">
            <div class="grid grid-cols-4  bg-combat-black text-signal-white border-b border-scarlet-red">
              <div class="px-4 border-r border-scarlet-red flex items-center justify-center">
                <h3 class="subheading-tactical text-[14px] text-signal-white font-bold">FEATURE</h3>
              </div>
              <div class="px-4 border-r border-scarlet-red flex items-center justify-center">
                <h3 class="subheading-tactical text-lg font-black text-signal-white">AWARE</h3>
              </div>
              <div class="px-4 border border-scarlet-red flex items-center justify-center">
                <h3 class="subheading-tactical text-[14px] font-medium text-desert-tan">TRADITIONAL</h3>
              </div>
              <div class="px-4 flex items-center justify-center">
                <h3 class="subheading-tactical text-[14px] font-medium text-desert-tan">FOAM</h3>
              </div>
            </div>
            {% for block in section.blocks %}
              {% if block.type == 'table' %}
                <div class="grid grid-cols-4 border-scarlet-red">
                  <div class="px-4 bg-combat-black border-r border-scarlet-red flex items-center justify-center">
                    <span class="body-tactical text-signal-white text-[14px]">{{ block.settings.featured }}</span>
                  </div>
                  {% case block.settings.aware %}
                    {% when 'yes' %}
                      <div class="px-4 border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="4"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-check size-6 text-signal-white"
                        >
                          <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                      </div>
                    {% when 'no' %}
                      <div class="px-4 border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="3"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-x size-6 text-desert-tan"
                        >
                          <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
                        </svg>
                      </div>
                    {% when 'limited' %}
                      <div class="px-4 border-scarlet-red bg-combat-black flex items-center justify-center">
                        <span class="text-[14px] text-desert-tan font-medium">LIMITED</span>
                      </div>
                  {% endcase %}
                  {% case block.settings.traditional %}
                    {% when 'yes' %}
                      <div class="px-4  border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="4"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-check size-6 text-signal-white"
                        >
                          <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                      </div>
                    {% when 'no' %}
                      <div class="px-4 border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="3"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-x size-6 text-desert-tan"
                        >
                          <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
                        </svg>
                      </div>
                    {% when 'limited' %}
                      <div class="px-4 border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <span class="text-[14px] text-desert-tan font-medium">LIMITED</span>
                      </div>
                  {% endcase %}
                  {% case block.settings.foam %}
                    {% when 'yes' %}
                      <div class="px-4 border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="4"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-check size-6 text-signal-white"
                        >
                          <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                      </div>
                    {% when 'no' %}
                      <div class="px-4 border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="3"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="lucide lucide-x size-6 text-desert-tan"
                        >
                          <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
                        </svg>
                      </div>
                    {% when 'limited' %}
                      <div class="px-4 border-r border-scarlet-red bg-combat-black flex items-center justify-center">
                        <span class="text-[14px] text-desert-tan font-medium">LIMITED</span>
                      </div>
                  {% endcase %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="w-1/3 flex justify-center">
          <a class="block w-full" href="/technology/efit-3d-scanner">
            <div class="bg-combat-black rounded-lg border border-scarlet-red p-8 flex flex-col items-center space-y-6 hover:opacity-80 transition-opacity cursor-pointer">
              <img
                src="{{ section.settings.side_image1 | image_url }}"
                alt="big image"
                class="w-full h-auto object-contain"
                height="100% "
                width="100%"

              ><img
                src="{{ section.settings.side_image2 | image_url }}"
                alt="small image"
                class="w-16 h-auto object-contain"
                height="100%"
                width="100%"
              >
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>
{% endcomment %}

<div
  class="flex items-center scroll-trigger animate--slide-in justify-center flex-col text-white py-16 px-4 font-sans"
  style="
          background: rgba(0, 0, 0, 7.24);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.68) 2%, rgba(0, 0, 0, 0.65) 53%, rgba(0, 0, 0, 0.74) 98%);
  "
>
  <div class="max-w-7xl">
    <p class="text-center text-[40px]/20 md:text-[48px]/20 font-semibold uppercase">
      Don't Compromise When the Mission Depends On It
    </p>

    <div class="mt-12 card-4-grid items-center gap-8 mx-auto">
      <!-- Table -->
      <div class="overflow-x-hidden w-full col-span-2">
        <table
          class="w-full table-auto border border-collapse text-[14px] md:text-xl"
          style="
            border-color: {{ section.settings.secondary_color }};
            color: {{ section.settings.primary_color }};
          "
        >
          <thead>
            <tr class="uppercase" style="background-color:{{section.settings.background_color }}">
              <th
                class="border px-6 py-4 text-white font-semibold text-left max-w-[50px]"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Feature
              </th>
              <th
                class="border px-8 py-3 text-white font-semibold max-w-[50px]"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Aware
              </th>
              <th
                class="border px-6 py-4 font-semibold max-w-[50px]"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Traditional
              </th>
              <th
                class="border px-8 py-3 font-semibold max-w-[30px]"
                style="border-color:{{section.settings.secondary_color }}"
              >
                Foam
              </th>
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'table' %}
                <tr style="background-color:{{ section.settings.background_color }}">
                  <!-- Feature Name -->
                  <td
                    class="border px-6 py-4 text-white text-xl max-w-[55px] h-[80px]"
                    style="border-color:{{section.settings.secondary_color}}; padding-top:20px; padding-bottom:20px"
                  >
                    {{ block.settings.featured }}
                  </td>

                  <!-- Aware Column -->
                  <td class="border text-center max-w-[30px]" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.aware %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <!-- Checkmark -->
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <!-- Cross -->
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>

                  <!-- Traditional Column -->
                  <td class="border text-center max-w-[30px]" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.traditional %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>

                  <!-- Foam Column -->
                  <td class="border text-center max-w-[30px]" style="border-color:{{section.settings.secondary_color}}">
                    {% case block.settings.foam %}
                      {% when 'yes' %}
                        <span class="flex items-center justify-center text-white">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32">
                            <path fill="currentColor" fill-rule="evenodd" d="M28.928 10.3a3.25 3.25 0 0 1-.137 4.595L13.94 28.89a3.25 3.25 0 0 1-4.557-.098l-6.264-6.435a3.25 3.25 0 0 1 4.658-4.534l4.033 4.143l12.525-11.802a3.25 3.25 0 0 1 4.594.136" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      {% when 'no' %}
                        <span class="text-2xl font-semibold flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
                            <path fill="currentColor" d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94z"/>
                          </svg>
                        </span>
                      {% when 'limited' %}
                        <span class="uppercase">Limited</span>
                    {% endcase %}
                  </td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>

      <!-- Image -->
      <div
        class="flex items-center justify-center flex-col border rounded-lg px-4 max-h-[400px] w-full py-8"
        style="border-color:{{section.settings.secondary_color }}; background-color:{{section.settings.background_color }}"
      >
        <img
          src="{{ section.settings.side_image1 | image_url }}"
          alt="first image"
          class="size-[264px] object-contain"
          width="264"
          height="264"
        >
        <img
          src="{{ section.settings.side_image2 | image_url }}"
          alt="second image"
          class="size-[50px] object-contain"
          width="96"
          height="96"
        >
      </div>
    </div>
  </div>
</div>

<style>
  .card-4-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr); /* Default: 1 column */
  }

  @media (min-width: 640px) {
    .card-4-grid {
      grid-template-columns: repeat(3, 1fr); /* 2 columns on small screens */
    }
  }
</style>

{% schema %}
{
  "name": "Comparisom Card",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Primary Color",
      "default": "#0d0d0d"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#B6AC87"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#7B0F23"
    },
    {
      "type": "image_picker",
      "id": "side_image1",
      "label": "First Side Image"
    },
    {
      "type": "image_picker",
      "id": "side_image2",
      "label": "Second Side Image"
    }
  ],
  "blocks": [
    {
      "type": "table",
      "name": "table",
      "settings": [
        {
          "type": "text",
          "id": "featured",
          "label": "Featured Text",
          "default": "Enter Featured Text"
        },
        {
          "type": "select",
          "id": "aware",
          "label": "Aware Options",
          "default": "yes",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        },
        {
          "type": "select",
          "id": "traditional",
          "label": "Traditional Options",
          "default": "no",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        },
        {
          "type": "select",
          "id": "foam",
          "label": "Foam Options",
          "default": "no",
          "options": [
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "limited",
              "label": "Limited"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparisom Card",
      "category": "Custom"
    }
  ]
}
{% endschema %}
