<section
  class="relative py-20 px-6 scroll-fade-in visible font-sans text-left flex items-center justify-center flex-col text-signal-white object-cover"
  style="background-image: url('{{ "site-banner-bg.png" | asset_url }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"
>
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.8)] bg-blend-color-darken"><p></p></div>
  <div class="mx-auto px-4">
    <div class="max-w-[1100px] mx-auto  transition-all scroll-trigger animate--slide-in duration-1000 delay-200">
      <p
        class="text-6xl font-black text-white text-center mb-16 uppercase"
      >
        {{ section.settings.card_title }}
      </p>
      <div class="app-bio-3-grid">
        <div
          class="border-[2px] text-card-foreground shadow-sm h-full bg-[#7b0f23]/10 border-[#7b0f23]/30 rounded-[12px] transition-all duration-700 delay-600 translate-y-8"
        >
          <div class="px-8 py-12 text-center h-full flex flex-col">
            <div
              class="size-24 bg-olive-drab rounded-[8px] mx-auto mb-6 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-wifi size-10 text-white"
              >
                <path d="M12 20h.01"></path>
                <path d="M2 8.82a15 15 0 0 1 20 0"></path>
                <path d="M5 12.859a10 10 0 0 1 14 0"></path>
                <path d="M8.5 16.429a5 5 0 0 1 7 0"></path>
              </svg>
            </div>
            <p
              class="text-[17px] font-black text-white mb-4 uppercase min-h-[3rem] flex items-center justify-center"
            >
              {{ section.settings.title1 }}
            </p>
            <p
              class="text-[#afa38e] leading-relaxed flex-1 flex items-center"
            >
              {{ section.settings.text1 }}
            </p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm h-full bg-[#7b0f23]/10 border-[#7b0f23]/30 rounded-[12px] transition-all duration-700 delay-700 translate-y-8"
        >
          <div class="px-8 py-12 text-center h-full flex flex-col">
            <div
              class="size-24 bg-[#695e49] bg-olive-drab rounded-[8px] mx-auto mb-6 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-shield size-10 text-white"
              >
                <path
                  d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
                ></path>
              </svg>
            </div>
            <p
              class="text-[17px] font-black text-white mb-4 uppercase min-h-[3rem] flex items-center justify-center"
            >
              {{ section.settings.title3 }}
            </p>
            <p
              class="text-[#afa38e] leading-relaxed flex-1 flex items-center"
            >
              {{ section.settings.text2 }}
            </p>
          </div>
        </div>
        <div
          class="border text-card-foreground shadow-sm h-full bg-[#7b0f23]/10 border-[#7b0f23]/30 rounded-[12px] transition-all duration-700 delay-800 translate-y-8"
        >
          <div class="px-8 py-12 text-center h-full flex flex-col">
            <div
              class="size-24 bg-olive-drab rounded-[8px] mx-auto mb-6 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-radio size-10 text-white"
              >
                <path d="M4.9 19.1C1 15.2 1 8.8 4.9 4.9"></path>
                <path d="M7.8 16.2c-2.3-2.3-2.3-6.1 0-8.5"></path>
                <circle cx="12" cy="12" r="2"></circle>
                <path d="M16.2 7.8c2.3 2.3 2.3 6.1 0 8.5"></path>
                <path d="M19.1 4.9C23 8.8 23 15.1 19.1 19"></path>
              </svg>
            </div>
            <p
              class="text-[17px] font-black text-white mb-4 uppercase min-h-[3rem] flex items-center justify-center"
            >
              {{ section.settings.title3 }}
            </p>
            <p
              class="text-[#afa38e] leading-relaxed flex-1 flex items-center"
            >
              {{ section.settings.text3 }}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-bio-3-grid {
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .app-bio-3-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

